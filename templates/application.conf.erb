    #}
  # Example of simple username/password authentication
  #type: basic
    #settings: {
      #username = "admin"
      #password = "1234"
    #}
}

# A list of known hosts
hosts = [<%- @targets.sort_by { |v| v['name'] }.each do |target| %>
{
    name = "<%= target['name'] %>"
    host = "<%= target['host'] %>"
},
